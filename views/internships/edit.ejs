<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit experience</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/internships/<%= internship._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Company/Organization name</label>
                    <input class="form-control" type="text" name="company" value=<%= internship.company %>>
                </div>
                <div class="form-group">
                    <label>Type of Experience</label>
                    <input class="form-control" type="text" name="type" value=<%= internship.type %>>
                </div>
                <div class="form-group">
                    <label>Start Date</label>
                    <input class="form-control" type="date" name="startdate" value=<%= internship.startdate %>>
                </div>
                <div class="form-group">
                    <label>End Date</label>
                    <input class="form-control" type="date" name="enddate" value=<%= internship.enddate %>>
                </div>
                <div class="form-group">
                    <label>Review</label>
                    <input class="form-control" type="text" name="review" value=<%= internship.review %>>
                </div>
                <div class="form-group">
                    <label>Advice to scholars</label>
                    <input class="form-control" type="text" name="advice" value=<%= internship.advice %>>
                </div>
                <div class="form-group">
                    <label>Email address if want scholars to reach out</label>
                    <input class="form-control" type="text" name="contact" value=<%= internship.contact %>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/internships/<%= internship._id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

