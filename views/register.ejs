<% include partials/header %>
<form action="/register" method="POST">
    <div class="form-group">
        <label>First name</label>
        <input class="form-control" type="text" name="firstname" placeholder="first name">
    </div>
    <div class="form-group">
        <label>Last name</label>
        <input class="form-control" type="text" name="lastname" placeholder="last name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="username" placeholder="email address">
    </div>
    <div class="form-group">
        <label>School</label>
        <input class="form-control" type="text" name="school" placeholder="school">
    </div>
    <div class="form-group">
        <label>Graduation Year</label>
        <input class="form-control" type="text" name="grad_year" placeholder="2020">
    </div>
    <div class="form-group">
        <label>Major</label>
        <input class="form-control" type="text" name="major" placeholder="major">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" name="password" placeholder="password">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
</form>
<% include partials/footer %>